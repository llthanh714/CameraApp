@page "/camera"
@rendermode InteractiveServer
@inject IJSRuntime JSRuntime
@inject NavigationManager NavManager

<PageTitle>@(string.IsNullOrEmpty(_displayPatientName) ? "Gemini Studio" : $"Siêu âm: {_displayPatientName}")</PageTitle>

<div class="container-fluid h-100 d-flex flex-column p-4 fade-in">
    <!-- Header Area -->
    <div class="d-flex justify-content-between align-items-center mb-3 flex-shrink-0">
        <div class="d-flex align-items-center gap-3">
            @if (!string.IsNullOrEmpty(_displayPatientName))
            {
                <button type="button" class="btn-circle-modern" @onclick="BackToWorklist" title="Quay lại danh sách">
                    <i class="bi bi-arrow-left"></i>
                </button>
                <div class="d-flex flex-column">
                    <div class="d-flex align-items-center gap-2">
                        <h4 class="fw-bold mb-0 text-primary">@_displayPatientName</h4>
                        <span class="badge bg-secondary bg-opacity-25 text-body small">@_displayPatientCode</span>
                    </div>
                    <small class="text-muted">Chế độ: Ghi hình Siêu âm</small>
                </div>
            }
            else
            {
                <div class="bg-primary bg-gradient rounded-circle d-flex align-items-center justify-content-center text-white" style="width: 48px; height: 48px; box-shadow: 0 4px 10px rgba(66, 133, 244, 0.3);">
                    <i class="bi bi-camera-reels-fill fs-4"></i>
                </div>
                <div>
                    <h3 class="fw-bold mb-0">Gemini Cam</h3>
                    <small class="text-muted">Studio thông minh</small>
                </div>
            }
        </div>

        <div class="d-flex gap-3 align-items-center">
            <span class="text-muted small d-none d-md-block fw-medium">@DateTime.Now.ToString("dd/MM/yyyy HH:mm")</span>
            <button type="button" class="btn-circle-modern" @onclick="ToggleTheme" title="Chế độ Sáng/Tối">
                @if (isDarkMode) { <i class="bi bi-moon-stars-fill text-warning"></i> }
                else { <i class="bi bi-sun-fill text-warning"></i> }
            </button>
        </div>
    </div>

    <!-- Controls Bar -->
    <div class="row g-3 mb-3 flex-shrink-0">
        <div class="col-md-3">
            <div class="control-pill">
                <i class="bi bi-webcam"></i>
                <select @bind="SelectedDeviceId" @bind:after="SaveConfig">
                     @if (videoDevices == null || !videoDevices.Any())
                    {
                        <option>Đang tìm thiết bị...</option>
                    }
                    else
                    {
                        @foreach (var device in videoDevices)
                        {
                            <option value="@device.DeviceId">@device.Label</option>
                        }
                    }
                </select>
            </div>
        </div>
        
        <div class="col-md-3">
            <div class="control-pill">
                <i class="bi bi-aspect-ratio"></i>
                <select @bind="SelectedResolution" @bind:after="SaveConfig">
                    <option value="0x0">Tự động (Res)</option>
                    <option value="1280x720">HD (720p)</option>
                    <option value="1920x1080">Full HD (1080p)</option>
                </select>
            </div>
        </div>

        <div class="col-md-3">
            <div class="control-pill">
                <i class="bi bi-speedometer2"></i>
                <select @bind="SelectedFps" @bind:after="SaveConfig">
                    <option value="0">Tự động (FPS)</option>
                    <option value="30">30 FPS</option>
                    <option value="60">60 FPS</option>
                </select>
            </div>
        </div>

        <div class="col-md-3">
            @if (!isCameraRunning)
            {
                <button class="btn-gemini w-100" @onclick="StartCamera">
                    <i class="bi bi-power"></i> Kết nối Máy SA
                </button>
            }
            else
            {
                <button class="btn-gemini w-100 bg-secondary bg-gradient text-white" style="background: #444746;" @onclick="StopCamera">
                    <i class="bi bi-stop-circle"></i> Ngắt kết nối
                </button>
            }
        </div>
    </div>

    <!-- Workspace Area -->
    <div class="row flex-grow-1 g-3 overflow-hidden">
        <!-- Video Feed -->
        <div class="col-lg-9 h-100">
            <div class="h-100 w-100 position-relative rounded-box border border-secondary border-opacity-25" style="background-color: #000;">
                <video id="videoFeed" class="w-100 h-100 object-fit-contain" autoplay playsinline muted></video>
                
                @if (!isCameraRunning)
                {
                    <div class="position-absolute top-50 start-50 translate-middle text-center text-muted opacity-50">
                        <i class="bi bi-activity display-1"></i>
                        <p class="mt-2">Chưa kết nối tín hiệu</p>
                    </div>
                }

                @if (isCameraRunning)
                {
                    <!-- Camera Dock -->
                    <div class="position-absolute bottom-0 start-50 translate-middle-x mb-4">
                        <div class="camera-dock">
                            
                            <!-- Nút Chụp Ảnh (Icon Only) -->
                            <button class="btn-shutter" @onclick="CaptureFrame" title="Lưu ảnh (Phím cách)">
                                <div class="btn-shutter-inner">
                                    <i class="bi bi-camera-fill text-dark fs-5"></i>
                                </div>
                            </button>

                            <!-- Vách ngăn -->
                            <div style="width: 1px; height: 32px; background: rgba(255,255,255,0.2);"></div>

                            <!-- Nút Quay Phim (Icon Only) -->
                            <button class="btn-record @(isRecording ? "recording pulse-ring" : "")" @onclick="ToggleRecording" title="@(isRecording ? "Dừng ghi" : "Ghi hình ca khám")">
                                <div class="btn-record-inner"></div>
                            </button>

                        </div>
                    </div>

                    @if (isRecording)
                    {
                         <div class="position-absolute top-0 end-0 m-4 px-3 py-2 rounded-pill bg-danger text-white d-flex align-items-center gap-2 small fw-bold shadow" style="backdrop-filter: blur(4px);">
                            <div class="spinner-grow spinner-grow-sm" role="status"></div> REC
                        </div>
                    }
                }
            </div>
        </div>

        <!-- Gallery Sidebar -->
        <div class="col-lg-3 h-100 d-flex flex-column">
            <div class="bg-surface rounded-box h-100 p-3 d-flex flex-column" style="background-color: var(--bg-surface);">
                
                <!-- 1. Header Sidebar -->
                <div class="d-flex justify-content-between align-items-center mb-3 ps-1 flex-shrink-0">
                    <h6 class="fw-bold text-uppercase text-muted small mb-0">
                        @if(!string.IsNullOrEmpty(_displayPatientName)) { <span>Dữ liệu ca khám</span> } else { <span>Thư viện tạm</span> }
                    </h6>
                    <span class="badge bg-primary bg-opacity-10 text-primary rounded-pill">@capturedItems.Count</span>
                </div>
                
                <!-- 2. Danh sách cuộn -->
                <div class="flex-grow-1 overflow-auto pe-2 custom-scrollbar" style="min-height: 0;">
                     @if (capturedItems.Count == 0)
                    {
                        <div class="h-100 d-flex flex-column justify-content-center align-items-center text-muted opacity-25">
                            <i class="bi bi-images display-4 mb-3"></i>
                            <span>Chưa có ảnh/video</span>
                        </div>
                    }
                    else 
                    {
                        <div class="d-flex flex-column gap-2">
                            @foreach (var item in Enumerable.Reverse(capturedItems))
                            {
                                <div class="card border-0 bg-transparent animate-item">
                                    <div class="position-relative">
                                        @if (item.Type == "image")
                                        {
                                            <img src="@item.Url" class="w-100 rounded-3 shadow-sm border border-light border-opacity-10" />
                                            <div class="position-absolute top-0 start-0 m-1 px-2 py-1 bg-dark bg-opacity-75 rounded-2 text-white" style="font-size: 0.65rem; font-weight: bold;">IMG</div>
                                        }
                                        else
                                        {
                                            <video src="@item.Url" controls class="w-100 rounded-3 shadow-sm border border-light border-opacity-10"></video>
                                            <div class="position-absolute top-0 start-0 m-1 px-2 py-1 bg-danger bg-opacity-75 rounded-2 text-white" style="font-size: 0.65rem; font-weight: bold;">VID</div>
                                        }
                                        
                                        <!-- Nút download -->
                                        <div class="position-absolute top-0 end-0 m-1">
                                            <a href="@item.Url" download="@item.Filename" class="btn btn-sm btn-dark rounded-circle bg-opacity-75 border-0 d-flex align-items-center justify-content-center" style="width: 28px; height: 28px;" title="Tải về máy"><i class="bi bi-download" style="font-size: 0.8rem"></i></a>
                                        </div>

                                        <!-- Trạng thái Upload -->
                                        <div class="position-absolute bottom-0 end-0 m-1 p-1 rounded-circle bg-dark bg-opacity-50 d-flex align-items-center justify-content-center cursor-pointer" style="width: 24px; height: 24px;" title="@GetStatusTitle(item)" @onclick="() => RetryUpload(item)">
                                            @if (item.IsUploading)
                                            {
                                                <div class="spinner-border spinner-border-sm text-light" role="status" style="width: 0.8rem; height: 0.8rem;"></div>
                                            }
                                            else if (item.IsUploaded)
                                            {
                                                <i class="bi bi-check-circle-fill text-success" style="font-size: 0.9rem;"></i>
                                            }
                                            else
                                            {
                                                <i class="bi bi-exclamation-circle-fill text-danger" style="font-size: 0.9rem;"></i>
                                            }
                                        </div>
                                    </div>
                                    <small class="text-muted mt-1 ms-1 d-block text-truncate" style="font-size: 0.75rem">
                                        <i class="bi bi-clock me-1"></i>@item.Timestamp.ToString("HH:mm:ss")
                                    </small>
                                </div>
                            }
                        </div>
                    }
                </div>
                
                <!-- 3. Footer Button -->
                @if (capturedItems.Count > 0 && !string.IsNullOrEmpty(_displayPatientName))
                {
                    <div class="mt-3 flex-shrink-0">
                        <button class="btn btn-gemini w-100" @onclick="FinishExam" disabled="@(capturedItems.Any(x => x.IsUploading) || isGlobalUploading)">
                            @if (capturedItems.Any(x => x.IsUploading) || isGlobalUploading)
                            {
                                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                <span>Đang đồng bộ...</span>
                            }
                            else
                            {
                                <i class="bi bi-check-lg"></i> <span>Kết thúc ca khám</span>
                            }
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .animate-pulse { animation: pulse 1.5s cubic-bezier(0.4, 0, 0.6, 1) infinite; }
    .animate-item { animation: slideIn 0.3s ease-out; }
    @@keyframes pulse { 0%, 100% { opacity: 1; } 50% { opacity: 0.5; } }
    @@keyframes slideIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }
    .object-fit-contain { object-fit: contain; background-color: black; }
    .cursor-pointer { cursor: pointer; }
</style>

@code {
    [SupplyParameterFromQuery] public string? PatientId { get; set; }
    [SupplyParameterFromQuery] public string? PatientName { get; set; }
    [SupplyParameterFromQuery] public string? PatientCode { get; set; }

    private string? _displayPatientName;
    private string? _displayPatientCode;

    private IJSObjectReference? module;
    private bool isCameraRunning = false;
    private bool isRecording = false;
    private bool isDarkMode = true;
    private bool isGlobalUploading = false; // Dùng cho trạng thái xử lý cuối cùng

    public class MediaItem {
        public string Type { get; set; } = "image";
        public string Url { get; set; } = "";
        public string Filename { get; set; } = "";
        public DateTime Timestamp { get; set; }
        // Trạng thái Upload Realtime
        public bool IsUploading { get; set; } = false;
        public bool IsUploaded { get; set; } = false;
    }
    private List<MediaItem> capturedItems = new();

    private List<VideoDevice> videoDevices = new();
    public string SelectedDeviceId { get; set; } = "";
    public string SelectedResolution { get; set; } = "0x0";
    public int SelectedFps { get; set; } = 0;

    protected override void OnParametersSet()
    {
        if (!string.IsNullOrEmpty(PatientName))
        {
            _displayPatientName = PatientName;
            _displayPatientCode = PatientCode;
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                module = await JSRuntime.InvokeAsync<IJSObjectReference>("import", "./camera.js");
                var savedTheme = await module.InvokeAsync<string>("getSavedTheme");
                isDarkMode = savedTheme == "dark";
                await ApplyTheme();
                await LoadVideoDevices();
                await LoadConfig();
                await StartCamera();
                StateHasChanged();
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error initializing camera: {ex.Message}");
            }
        }
    }

    // --- Helper Upload Realtime ---
    private async Task UploadItemImmediately(MediaItem item)
    {
        if (module is null) return;

        item.IsUploading = true;
        await InvokeAsync(StateHasChanged); // Update UI ngay để hiện spinner

        try
        {
            // Gọi hàm JS uploadMedia đã có sẵn logic FormData
            var success = await module.InvokeAsync<bool>(
                "uploadMedia",
                item.Url,
                item.Filename,
                "api/Video/append" 
            );

            item.IsUploaded = success;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Lỗi upload {item.Filename}: {ex.Message}");
            item.IsUploaded = false;
        }
        finally
        {
            item.IsUploading = false;
            await InvokeAsync(StateHasChanged);
        }
    }

    private async Task RetryUpload(MediaItem item)
    {
        if (!item.IsUploaded && !item.IsUploading)
        {
            await UploadItemImmediately(item);
        }
    }

    private string GetStatusTitle(MediaItem item)
    {
        if (item.IsUploading) return "Đang lưu lên máy chủ...";
        if (item.IsUploaded) return "Đã lưu an toàn";
        return "Lỗi lưu file - Nhấn để thử lại";
    }

    // --- Actions ---

    private void BackToWorklist() => NavManager.NavigateTo("/worklist");

    private async Task FinishExam()
    {
        // Kiểm tra xem có file nào bị lỗi chưa upload được không
        var failedItems = capturedItems.Where(x => !x.IsUploaded && !x.IsUploading).ToList();

        if (failedItems.Any())
        {
            isGlobalUploading = true;
            StateHasChanged();
            
            // Cố gắng upload lại các file lỗi lần cuối
            foreach (var item in failedItems)
            {
                await UploadItemImmediately(item);
            }
            
            isGlobalUploading = false;
            StateHasChanged();
        }

        // Nếu tất cả đã ổn (hoặc chấp nhận rủi ro nếu vẫn lỗi sau khi retry), quay về
        if (capturedItems.All(x => x.IsUploaded))
        {
            NavManager.NavigateTo("/worklist");
        }
        else
        {
            // Có thể hiện thông báo: "Còn file chưa lưu được, bạn có chắc muốn thoát?"
            // Hiện tại code sẽ giữ người dùng ở lại để họ thấy file lỗi.
            // Để đơn giản, ta cho phép thoát luôn hoặc giữ lại tùy policy.
            // Ở đây tôi chọn giữ lại để user biết file nào lỗi.
        }
    }

    private async Task CaptureFrame()
    {
        if (module is not null) 
        {
            try {
                // Lấy Blob URL từ JS (nhanh hơn Base64)
                var url = await module.InvokeAsync<string>("takePicture", "videoFeed");
                
                var newItem = new MediaItem { 
                    Type = "image", 
                    Url = url, 
                    Timestamp = DateTime.Now, 
                    Filename = $"IMG_{DateTime.Now:yyyyMMdd_HHmmss}.png" 
                };
                
                capturedItems.Add(newItem);
                
                // Kích hoạt upload ngay lập tức (Fire and forget task để không block UI)
                _ = UploadItemImmediately(newItem);
            } catch (Exception ex) {
                Console.WriteLine($"Capture error: {ex.Message}");
            }
        }
    }

    private async Task ToggleRecording() { if (isRecording) await StopRecording(); else await StartRecording(); }
    private async Task StartRecording() { if (module is not null && await module.InvokeAsync<bool>("startRecording", "videoFeed")) isRecording = true; }
    
    private async Task StopRecording() 
    {
        if (module is not null) 
        { 
            try {
                var url = await module.InvokeAsync<string>("stopRecording"); 
                isRecording = false;
                
                var newItem = new MediaItem { 
                    Type = "video", 
                    Url = url, 
                    Timestamp = DateTime.Now, 
                    Filename = $"VID_{DateTime.Now:yyyyMMdd_HHmmss}.webm" 
                };
                
                capturedItems.Add(newItem);

                // Kích hoạt upload ngay lập tức
                _ = UploadItemImmediately(newItem);
            } catch (Exception ex) {
                 Console.WriteLine($"Recording stop error: {ex.Message}");
                 isRecording = false;
            }
        }
    }
    
    private async Task ToggleTheme() { isDarkMode = !isDarkMode; await ApplyTheme(); }
    private async Task ApplyTheme() { if (module is not null) await module.InvokeVoidAsync("setTheme", isDarkMode ? "dark" : "light"); }
    private async Task LoadConfig() 
    {
        if (module is not null) {
            var s = await module.InvokeAsync<CameraSettings?>("getSavedSettings");
            if (s != null) { 
                if (videoDevices.Any(d => d.DeviceId == s.DeviceId)) SelectedDeviceId = s.DeviceId;
                SelectedResolution = s.Resolution; SelectedFps = s.Fps; 
            }
        }
    }
    private async Task SaveConfig() { 
        if (module is not null) {
            await module.InvokeVoidAsync("saveSettings", new CameraSettings { DeviceId = SelectedDeviceId, Resolution = SelectedResolution, Fps = SelectedFps });
            if (isCameraRunning) await StartCamera();
        }
    }
    private async Task LoadVideoDevices() {
        if (module is not null) {
            var devices = await module.InvokeAsync<VideoDevice[]>("getVideoDevices");
            videoDevices = devices.ToList();
            if (videoDevices.Any() && string.IsNullOrEmpty(SelectedDeviceId)) SelectedDeviceId = videoDevices.First().DeviceId;
        }
    }
    private async Task StartCamera() {
        if (module is not null) {
            int w = 0; int h = 0;
            if (SelectedResolution != "0x0") { var p = SelectedResolution.Split('x'); if (p.Length == 2) { int.TryParse(p[0], out w); int.TryParse(p[1], out h); } }
            await module.InvokeVoidAsync("startCamera", "videoFeed", SelectedDeviceId, w, h, SelectedFps);
            isCameraRunning = true;
        }
    }
    private async Task StopCamera() {
        if (module is not null) {
            if (isRecording) await StopRecording();
            await module.InvokeVoidAsync("stopCamera", "videoFeed");
            isCameraRunning = false;
        }
    }

    public class VideoDevice { public string DeviceId { get; set; } = ""; public string Label { get; set; } = ""; }
    public class CameraSettings { public string DeviceId { get; set; } = ""; public string Resolution { get; set; } = "0x0"; public int Fps { get; set; } = 0; }
}