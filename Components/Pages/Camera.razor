                await ApplyTheme();
                await LoadVideoDevices();
                await LoadConfig();
                await StartCamera();
                
                objRef = DotNetObjectReference.Create(this);
                await module.InvokeVoidAsync("registerShortcuts", objRef);

                StateHasChanged();
            }
            catch (Exception ex)
            {
                ShowError($"Khởi tạo thất bại: {ex.Message}");
            }
        }
    }

