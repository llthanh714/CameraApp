    private async Task DeleteItem(MediaItem item)
    {
        // Giờ tất cả Url đều là blob url, cần được thu hồi để tránh memory leak
        if (module is not null)
        {
            await module.InvokeVoidAsync("revokeUrl", item.Url);
        }
        capturedItems.Remove(item);
        StateHasChanged();
    }

    private async Task BackToWorklist()
    {
        await CleanupResources();
        NavManager.NavigateTo("/worklist");
    }

    private async Task FinishExam()
    {
        // Logic này giờ chỉ cần điều hướng về, vì file đã được lưu real-time
        await CleanupResources();
        NavManager.NavigateTo("/worklist");
    }


    private async Task CaptureFrame()
    {
        if (module is not null) 
        {
            try {
                // Tạo tên file trước
                var fileName = $"IMG_{_displayPatientCode ?? "NA"}_{DateTime.Now:yyyyMMdd_HHmmss}.jpg";
                
                // Gọi hàm JS mới, hàm này vừa LƯU FILE vừa trả về URL để hiển thị
                var url = await module.InvokeAsync<string>("takePictureAndSave", "videoFeed", fileName, _displayPatientCode ?? "NA");
                
                if (string.IsNullOrEmpty(url)) 
                {
                    ShowError("Không thể lưu ảnh. Hãy chắc chắn bạn đã chọn thư mục lưu ở trang danh sách.");
                    return;
                }

                var newItem = new MediaItem 
                { 
                    Type = "image", 
                    Url = url, 
                    Timestamp = DateTime.Now, 
                    Filename = fileName,
                    IsUploaded = true // Dùng cờ này để đánh dấu "Đã lưu cục bộ"
                };
                
                capturedItems.Add(newItem);
                StateHasChanged(); // Cập nhật UI ngay lập tức
            } catch (Exception ex) { ShowError($"Lỗi chụp ảnh: {ex.Message}"); }
        }
    }

    private async Task ToggleRecording() { if (isRecording) await StopRecording(); else await StartRecording(); }

    private async Task StartRecording() 
    { 
        if (module is not null) 
        {
            // Gọi hàm JS để bắt đầu quay, không cần tham số upload
            var success = await module.InvokeAsync<bool>("startRecordingLocal", "videoFeed");
            
            if (success) 
            {
                isRecording = true;
            }
            else 
            {
                ShowError("Không thể bắt đầu ghi hình. Hãy chắc chắn bạn đã chọn thư mục lưu.");
            }
        } 
    }

    private async Task StopRecording() 
    {
        if (module is not null) 
        { 
            try {
                // Tạo tên file trước
                var fileName = $"VID_{_displayPatientCode ?? "NA"}_{DateTime.Now:yyyyMMdd_HHmmss}.webm";

                // Dừng quay, LƯU FILE và nhận lại URL để hiển thị
                var url = await module.InvokeAsync<string>("stopRecordingAndSaveLocal", fileName, _displayPatientCode ?? "NA");
                isRecording = false;

                if (string.IsNullOrEmpty(url)) 
                {
                    ShowError("Không thể lưu video. Hãy chắc chắn bạn đã chọn thư mục lưu ở trang danh sách.");
                    return;
                }

                var newItem = new MediaItem { 
                    Type = "video", 
                    Url = url, 
                    Timestamp = DateTime.Now, 
                    Filename = fileName,
                    IsUploaded = true // Đánh dấu là "Đã lưu cục bộ"
                };
                
                capturedItems.Add(newItem);
                StateHasChanged();
            } 
            catch (Exception ex) 
            { 
                ShowError($"Lỗi dừng ghi: {ex.Message}"); 
                isRecording = false; 
            }
        }
    }
    
    private void ShowError(string msg)
    {
        errorMessage = msg;
        StateHasChanged();
        _ = Task.Delay(5000).ContinueWith(_ => { errorMessage = null; InvokeAsync(StateHasChanged); });
    }

    // --- Các hàm setting camera giữ nguyên ---
    private async Task ToggleTheme() { isDarkMode = !isDarkMode; await ApplyTheme(); }
    private async Task ApplyTheme() { if (module is not null) await module.InvokeVoidAsync("setTheme", isDarkMode ? "dark" : "light"); }
    private async Task LoadConfig() 
    {
        if (module is not null) {
            var s = await module.InvokeAsync<CameraSettings?>("getSavedSettings");
            if (s != null) { 
                if (videoDevices.Any(d => d.DeviceId == s.DeviceId)) SelectedDeviceId = s.DeviceId;
                SelectedResolution = s.Resolution; SelectedFps = s.Fps; 
            }
        }
    }
    private async Task SaveConfig() { 
        if (module is not null) {
            await module.InvokeVoidAsync("saveSettings", new CameraSettings { DeviceId = SelectedDeviceId, Resolution = SelectedResolution, Fps = SelectedFps });
            if (isCameraRunning) await StartCamera();
        }
    }
    private async Task LoadVideoDevices() {
        if (module is not null) {
            var devices = await module.InvokeAsync<VideoDevice[]>("getVideoDevices");
            videoDevices = devices.ToList();
            if (videoDevices.Any() && string.IsNullOrEmpty(SelectedDeviceId)) SelectedDeviceId = videoDevices.First().DeviceId;
        }
    }
    private async Task StartCamera() {
        if (module is not null) {
            int w = 0; int h = 0;
            if (SelectedResolution != "0x0") { var p = SelectedResolution.Split('x'); if (p.Length == 2) { int.TryParse(p[0], out w); int.TryParse(p[1], out h); } }
            await module.InvokeVoidAsync("startCamera", "videoFeed", SelectedDeviceId, w, h, SelectedFps);
            isCameraRunning = true;
            errorMessage = null;
        }
    }
    private async Task StopCamera() {
        if (module is not null) {
            if (isRecording) await StopRecording();
            await module.InvokeVoidAsync("stopCamera", "videoFeed");
            isCameraRunning = false;
        }
    }
    
    private async Task CleanupResources()
    {
        if (module is not null)
        {
            foreach(var item in capturedItems.Where(x => x.Type == "image"))
            {
                await module.InvokeVoidAsync("revokeUrl", item.Url);
            }
        }
        await StopCamera();
    }

    public async ValueTask DisposeAsync()
    {
        try 
        {
            await CleanupResources();
            if (module is not null)
            {
                await module.InvokeVoidAsync("unregisterShortcuts");
                await module.DisposeAsync();
            }
            objRef?.Dispose();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Dispose cleanup warning: {ex.Message}");
        }
    }

    public class VideoDevice { public string DeviceId { get; set; } = ""; public string Label { get; set; } = ""; }
    public class CameraSettings { public string DeviceId { get; set; } = ""; public string Resolution { get; set; } = "0x0"; public int Fps { get; set; } = 0; }
}
